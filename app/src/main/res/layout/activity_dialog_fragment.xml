<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nucleo"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:text="Ingrese su observaciÃ³n"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="19sp"
            android:background="@color/colorBackGround"
            android:textColor="@color/sysWhite"/>

    <EditText
        android:id="@+id/txt_descripcion"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="text|textMultiLine"
        android:scrollHorizontally="false"
        android:maxLength="1000"
        android:maxLines="3"
        android:gravity="top|left"
        android:layout_marginLeft="15dp"
        android:scrollbars="vertical"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="@dimen/quince_dp"
        android:layout_height="70dp"
        android:background="@drawable/textbox_form_activo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Guardar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textColor="@color/sysWhite"
        android:id="@+id/btn_guardarDesc"
        android:background="@drawable/btn_click"/>
</LinearLayout>